file = {:home/rob/Desktop/work/papers/zeeger2005.pdf:pdf},
isbn = {0361-1981},
issn = {0361-1981},
journal = {The Federal Highway Administration (FHWA)},
number = {September},
pages = {112},
title = {{Safety Effects of Marked Versus Unmarked Crosswalks at Uncontrolled Locations: Final Report and Recommended Guidelines}},
year = {2005}
}
