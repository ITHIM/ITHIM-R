journal = {Reliability Engineering and System Safety},
keywords = {Expert elicitation,Fine particles,Kuwaiti oil fires,Mortality},
number = {5},
pages = {732--744},
title = {{Uncertainty in mortality response to airborne fine particulate matter: Combining European air pollution experts}},
