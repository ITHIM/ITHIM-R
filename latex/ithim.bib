issn = {1353-8047},
journal = {Injury Prevention},
pages = {injuryprev--2017--042498},
pmid = {29191968},
title = {{Contextualising Safety in Numbers: a longitudinal investigation into change in cycling safety in Britain, 1991–2001 and 2001–2011}},
url = {http://injuryprevention.bmj.com/lookup/doi/10.1136/injuryprev-2017-042498},
