arxivId = {1609.00141},
author = {Shaddick, Gavin and Thomas, Matthew L. and Jobling, Amelia and Brauer, Michael and van Donkelaar, Aaron and Burnett, Rick and Chang, Howard and Cohen, Aaron and {Van Dingenen}, Rita and Dora, Carlos and Gumy, Sophie and Liu, Yang and Martin, Randall and Waller, Lance A. and West, Jason and Zidek, James V. and Pr{\"{u}}ss-Ust{\"{u}}n, Annette},
eprint = {1609.00141},
journal = {arXiv},
title = {{Data integration model for air quality: a hierarchical approach to the global estimation of exposures to ambient air pollution}},
